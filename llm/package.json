{
    "name": "coachgpt-llm-service",
    "version": "1.0.0",
    "description": "Simplified LLM microservice for CoachGPT Pro - AI fitness coaching",
    "main": "dist/server.js",
    "scripts": {
    "build": "tsc",
    "start": "ts-node src/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.8",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.4",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "keywords": [
        "llm",
        "ai",
        "microservice",
        "fitness",
        "coaching",
        "ollama",
        "local-ai",
        "typescript"
    ]
}